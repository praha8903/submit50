#include <cs50.h>
#include <stdio.h>
void repeat_char(char letter, int times);

int main(void)
{
    int  i, Height;
    do {
        Height = get_int("Height: ");
        printf("\n");
    } while (Height < 1 | Height > 9);
    
    for(i = 0; i < Height; i++){
        repeat_char(' ', Height - i -1);
        repeat_char('#', i + 1);
        printf(" ");
        repeat_char('#', i + 1);
        repeat_char(' ', Height - i -1);
        printf("\n");
        }
}
void repeat_char(char letter, int times)
{
    int k;
    for(k = 0; k < times; k++){
        printf("%c", letter);
    }
}
